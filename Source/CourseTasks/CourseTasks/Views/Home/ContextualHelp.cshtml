            @Shortcuts.QuickFix()
            @Shortcuts.NavigateToNextSuggestion()
            @Shortcuts.NavigateToPrevSuggestion()
            @Shortcuts.NavigateToNextError()
            @Shortcuts.NavigateToPrevError()
        </table>
    </div>

</div>