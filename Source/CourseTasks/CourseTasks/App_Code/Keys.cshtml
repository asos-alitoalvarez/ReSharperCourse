@helper Alt()
{
    <kbd>Alt</kbd>
}

@helper Ctrl()
{
    <kbd>Ctrl</kbd>
}

@helper Shift()
{
    <kbd>Shift</kbd>
}

@helper Up()
{
    <kbd>Up</kbd>
}

@helper Down()
{
    <kbd>Down</kbd>
}

@helper Key(string key)
{
    <kbd>@key</kbd>
}

@helper Shortcut(string modifiers, string key =  "")
{
    bool first = true;
    
    if(modifiers.IndexOf("A", StringComparison.InvariantCultureIgnoreCase) != -1)
    {
        @Alt();
        first = false;
    }
    
    if(modifiers.IndexOf("C", StringComparison.InvariantCultureIgnoreCase) != -1)
    {
        if (!first)
        {
            @(" + ")
        }
        
        @Ctrl()
        first = false;
    }    
    
    if(modifiers.IndexOf("S", StringComparison.InvariantCultureIgnoreCase) != -1)
    {
        if (!first)
        {
            @(" + ")
        }
        
        @Shift()
        first = false;
    }
    
    if(!string.IsNullOrWhiteSpace(key))
    {
        if(!first)
        {
            @(" + ")
        }
        
        @Key(key)
    }
    
}